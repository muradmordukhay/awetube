# Database
DATABASE_URL=postgresql://user:password@localhost:5432/awetube

# NextAuth
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000

# Qencode (storage, transcoding, CDN, player)
QENCODE_API_KEY=your-qencode-api-key
QENCODE_API_ENDPOINT=https://api.qencode.com
QENCODE_S3_BUCKET=your-bucket-name
QENCODE_S3_REGION=us-west
NEXT_PUBLIC_QENCODE_PLAYER_LICENSE=your-player-license-key

# Security
CALLBACK_SIGNING_SECRET=generate-with-openssl-rand-base64-32

# Rate limiting (Upstash Redis — optional, falls back to in-memory)
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Email (Resend — optional in development, login links print to terminal)
# Required in production for passwordless sign-in
RESEND_API_KEY=your-resend-api-key

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Deployment metadata (optional)
GIT_SHA=local

# Feature flags
FF_AUTH_EMAIL_LINKS=true
FF_AUTH_PASSWORDLESS_ONLY=true
FF_AUTH_RATE_LIMIT=true
FF_PROFILE_COMPLETION=true
